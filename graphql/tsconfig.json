{
    "compilerOptions": {
    "rootDir": "./",
    "target": "es2020",
    "outDir": "./bin",
    "declaration": true,
    "strict": true,
    "preserveConstEnums": true,
    
    "sourceMap": false,
    "module": "commonjs",
    "types": ["node", "jest"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
    },
    "exclude": ["node_modules", "**/*.test.ts"]
}